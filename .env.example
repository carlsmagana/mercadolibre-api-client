# MercadoLibre API Configuration
# Obtén tus credenciales en: https://developers.mercadolibre.com.mx/

# Opcional: Client ID y Secret para APIs que requieren autenticación
MELI_CLIENT_ID=your_client_id_here
MELI_CLIENT_SECRET=your_client_secret_here

# Configuración de la aplicación
DEFAULT_SITE=MLM  # MLM = México, MLA = Argentina, MLB = Brasil, etc.
DEFAULT_LIMIT=50  # Número de resultados por página (máximo 50)
CACHE_ENABLED=true
CACHE_TTL=3600  # Tiempo de vida del cache en segundos

# Configuración de rate limiting
REQUESTS_PER_MINUTE=60
DELAY_BETWEEN_REQUESTS=1.0
