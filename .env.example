# MercadoLibre API Configuration
# Obtén tus credenciales en: https://developers.mercadolibre.com.mx/

# Configuración para el Cliente de MercadoLibre API

# Credenciales de la aplicación (obtener en https://developers.mercadolibre.com.mx/)
# IMPORTANTE: Reemplaza estos valores con tus credenciales reales
MELI_CLIENT_ID=tu_app_id_aqui
MELI_CLIENT_SECRET=tu_client_secret_aqui

# Configuración por defecto
DEFAULT_SITE=MLM
DEFAULT_LIMIT=50

# Rate limiting (APIs autenticadas permiten más requests)
REQUESTS_PER_MINUTE=300
DELAY_BETWEEN_REQUESTS=0.2

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO

# URLs de autenticación
MELI_AUTH_URL=https://auth.mercadolibre.com.mx/authorization
MELI_TOKEN_URL=https://api.mercadolibre.com/oauth/token
